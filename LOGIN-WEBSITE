  <script>
    function login() {
      const username = document.getElementById("username").value.trim();
      const password = document.getElementById("password").value;

      if (username === "jairusg" && password === "1234") {
        // Save login to session storage (optional)
        sessionStorage.setItem("loggedIn", "true");
        window.location.href = "FINAL-WEBSITE.html";
      } else {
        alert("Incorrect username or password.\nTry: jairusg / 1234");
      }
    }
  </script>
